<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkitDemo.Pages.DetailPage"
             BackgroundColor="#0d1117">

    <Grid RowDefinitions="Auto,*">

        <!-- Custom Navigation Bar -->
        <Border Grid.Row="0" 
                BackgroundColor="#161b22"
                StrokeThickness="0"
                Padding="16,12">
            <Grid ColumnDefinitions="Auto,*">
                <Button Text="â† Back"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        TextColor="#58a6ff"
                        Clicked="OnBackClicked"/>
                <Label Text="Detail Page"
                       Grid.Column="1"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Detail Page"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,20,0,20"/>

                <Frame BackgroundColor="#161b22" 
                       BorderColor="#30363d"
                       CornerRadius="12"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Navigation Demo" 
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="Notice that the Tab Bar disappeared when you navigated here. This is the power of SimpleShell's RootPageOverlay!" 
                               FontSize="14"
                               TextColor="#8b949e"
                               LineHeight="1.5"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>