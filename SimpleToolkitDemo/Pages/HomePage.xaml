<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkitDemo.Pages.HomePage"
             BackgroundColor="#0d1117">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Home Page"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"/>

            <Frame BackgroundColor="#161b22" 
                   BorderColor="#30363d"
                   CornerRadius="12"
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Welcome to SimpleToolkit Demo" 
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Custom navigation with SimpleShell" 
                           FontSize="14"
                           TextColor="#8b949e"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Go to Detail Page"
                    BackgroundColor="#238636"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="48"
                    Clicked="OnNavigateClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>