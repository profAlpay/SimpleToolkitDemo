<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleToolkitDemo.Pages.ProfilePage"
             BackgroundColor="#0d1117">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Profile Page"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20"/>

            <Frame BackgroundColor="#161b22" 
                   BorderColor="#30363d"
                   CornerRadius="12"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Developer Info" 
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <BoxView HeightRequest="1" BackgroundColor="#30363d"/>
                    <Label Text="Name: Demo User" 
                           FontSize="16"
                           TextColor="#c9d1d9"/>
                    <Label Text="Framework: .NET MAUI" 
                           FontSize="16"
                           TextColor="#c9d1d9"/>
                    <Label Text="Library: SimpleToolkit" 
                           FontSize="16"
                           TextColor="#c9d1d9"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>