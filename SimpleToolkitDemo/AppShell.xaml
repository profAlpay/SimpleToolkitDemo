<?xml version="1.0" encoding="UTF-8" ?>
<simpleShell:SimpleShell
    x:Class="SimpleToolkitDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:simpleShell="clr-namespace:SimpleToolkit.SimpleShell;assembly=SimpleToolkit.SimpleShell"
    xmlns:pages="clr-namespace:SimpleToolkitDemo.Pages"
    xmlns:controls="clr-namespace:SimpleToolkitDemo.Controls"
    x:Name="thisShell"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        Route="home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Icon="home.svg" />

    <ShellContent
        Title="Explore"
        Route="explore"
        ContentTemplate="{DataTemplate pages:ExplorePage}"
        Icon="explore.svg" />

    <ShellContent
        Title="Profile"
        Route="profile"
        ContentTemplate="{DataTemplate pages:ProfilePage}"
        Icon="profile.svg" />

    <simpleShell:SimpleShell.RootPageContainer>
        <Grid RowDefinitions="*, Auto">
            <simpleShell:SimpleNavigationHost Grid.Row="0" />
            <controls:CustomTabBar Grid.Row="1" />
        </Grid>
    </simpleShell:SimpleShell.RootPageContainer>

</simpleShell:SimpleShell>